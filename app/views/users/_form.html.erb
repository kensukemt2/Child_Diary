<div class="mb-5 list-unstyled">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %></h2>
      <ul class="list-unstyled">
        <% @user.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= form_with(model: @user,local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_field :name, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :email, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_field :email, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :child_name, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_field :child_name, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :birthday, class:"cotrol-label col-2" %>
    <div class="col-8 text-left"><%= f.date_select :birthday, class: "custom-select" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :image, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.file_field :image , id: :user_image, class: "form-control-file" %></div>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-group row">
    <%= f.label :comment, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_area :comment, class: "form-control" %></div>
  </div>
  <div class="form-group row" id="passwd_form">
    <%= f.label :password, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.password_field :password, class: "form-control" %></div>
  </div>
  <div class="form-group row" id="passwd_form">
    <%= f.label :password_confirmation, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.password_field :password_confirmation, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <div class="offset-2 pl-3">
      <%= f.submit "登録します" %>
    </div>
  </div>
<% end %>
