<h1>新規ユーザー登録画面</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %></h2>
    <ul>
      <% @user.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user,local: true) do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div>
  <%= f.label :child_name %>
  <%= f.text_field :child_name %>
</div>
<div>
  <%= f.label :birthday %>
  <%= f.date_select :birthday %>
</div>
<div>
  <%= f.label :image %>
  <%= f.file_field :image , id: :user_image %>
  <%= f.hidden_field :image_cache %>
</div>
<div>
  <%= f.label :comment %>
  <%= f.text_area :comment %>
</div>
<div>
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>
<div>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</div>

<div>
  <%= f.submit "登録します" %>
</div>
<% end %>
