<%= form_with(model: [post, comment]) do |f| %>
  <div class="form-group row">
    <%= f.label :content, class: "col-2 col-form-label col-form-label-lg" %>
    <div class="col-8">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <div class="actions form-group row">
    <div class="offset-2">
      <%= button_tag '<i class="fa fa-comment  fa-2x fa-fw"></i>コメントする'.html_safe, type: "submit", class: "btn btn-default btn-s-md" %>
    </div>
  </div>
<% end %>
