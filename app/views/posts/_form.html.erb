<div class="mb-5">
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %></h2>
      <ul>
        <% @post.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= form_with(model: @post, local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_field :title, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :content, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_field :content, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :image, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.file_field :image, class: "form-control-file" %></div>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-group row">
    <div class="offset-2 pl-3">
      <%= f.submit "登録する" %>
    </div>
  </div>
<% end %>
<%= link_to "マイページに戻る", user_path(current_user.id), class: "btn btn-primary btn-lg rounded-pill mb-5" %>
