<div class="mb-5 list-unstyled">
  <% if @circle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@circle.errors.count, "error") %></h2>
      <ul>
        <% @circle.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= form_with(model: @circle, local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :circle_name, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_field :circle_name, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :circle_content, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.text_area :circle_content, class: "form-control" %></div>
  </div>
  <div class="form-group row">
    <%= f.label :circle_image, class:"cotrol-label col-2" %>
    <div class="col-8"><%= f.file_field :circle_image, id: :circle_image, class: "form-control-file" %></div>
      <%= f.hidden_field :circle_image_cache %>
  </div>
  <div class="form-group row text-center">
    <div class="offset-2 pl-3">
      <%= f.submit %>
    </div>
  </div>
<% end %>
<%= link_to "マイページに戻る", user_path(current_user.id), class: "btn btn-primary btn-lg rounded-pill mb-5" %>
